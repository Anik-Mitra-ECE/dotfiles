[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	abbrev = 12
	attributesfile = ~/.gitattributes
	autocrlf = input
	excludesfile = ~/.gitignore

[alias]
    ll    = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	acall = !git add -A && git commit -m --verbose \"Minor fixes\"
	st    = status
	POM   = push origin master
	PUM   = pull origin master
	filehist = log --follow -p

[push]
	default = matching

[color]
	ui = auto

[color "branch"]
	current = green bold
	local = yellow bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = white reverse
	newMoved = cyan
	oldMoved = blue
	colorMoved = zebra

[color "status"]
	added = green reverse
	changed = yellow reverse
	untracked = red reverse

[diff]
	tool = vimdiff
