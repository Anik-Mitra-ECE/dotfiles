#bindsym $mod+mod1+y		exec --no-startup-id $term -e calcurse
bindsym $mod+Control+i 		exec --no-startup-id $term -e htop

bindsym $mod+o                   sticky toggle
# bindsym $mod+p		 exec --no-startup-id lmc toggle
# bindsym $mod+mod1+a		 exec --no-startup-id $term -e pulsemixer

bindsym $mod+Control+s		 gaps inner current plus 5
bindsym $mod+Control+a		 gaps inner current minus 5
bindsym $mod+Control+d		 gaps inner all set 15; gaps outer all set 10

set $freeze Distraction-free mode (mod+shift+esc to exit)
bindsym $mod+esc mode "$freeze"
mode "$freeze" { 
	bindsym $mod+Shift+Escape mode "default"
}


set $mode_power power
bindsym $mod+x  exec --no-startup-id ~/.config/i3/scripts/i3leavenotification.sh; mode "$mode_power"
mode "$mode_power" {
    # mode "default", exec --no-startup-id ~/.config/i3/scripts/i3leavenotification.sh
    bindsym l mode "default", exec --no-startup-id  ~/.config/i3/scripts/i3exit.sh lock
    bindsym e mode "default", exec --no-startup-id  ~/.config/i3/scripts/i3exit.sh logout
    bindsym p mode "default", exec --no-startup-id  ~/.config/i3/scripts/i3exit.sh suspend
    bindsym h mode "default", exec --no-startup-id  ~/.config/i3/scripts/i3exit.sh hibernate
    bindsym r mode "default", exec --no-startup-id  ~/.config/i3/scripts/i3exit.sh reboot
    bindsym s mode "default", exec --no-startup-id  ~/.config/i3/scripts/i3exit.sh shutdown

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


