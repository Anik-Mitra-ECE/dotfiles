# defining different keys
set $mod mod4
set $alt mod1
set $esc Escape
set $ctl Control
set $ctr mod3
set $alg mod5
set $crcum dead_circumflex
set $acute dead_acute
set $ä adiaeresis
set $ö odiaeresis
set $ü udiaeresis

# Needed for i3-gaps
for_window [class="^.*"] border pixel 3
set $term --no-startup-id i3-sensible-terminal
# set $stoprec --no-startup-id killrecording
# set $stoprec --no-startup-id pkill ffplay; pkill -15 ffmpeg
set $shutdown sudo shutdown -h now
set $reboot sudo reboot
set $netrefresh --no-startup-id sudo systemctl restart NetworkManager
set $hibernate sudo systemctl suspend

